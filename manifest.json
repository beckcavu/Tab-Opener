{
    "name": "Tab Opener beta",
    "version": "0.1.0",
    "description": "Extension to open many tabs with one click of a button",
    "permissions": ["declarativeContent", "storage"],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "favicons/favicon-16x16.png",
            "32": "favicons/favicon-32x32.png",
            "48": "favicons/favicon-32x32.png",
            "128": "favicons/mstile-150x150.png"
          }
      },
      "icons": {
        "16": "favicons/favicon-16x16.png",
            "32": "favicons/favicon-32x32.png",
            "48": "favicons/favicon-32x32.png",
            "128": "favicons/mstile-150x150.png"
      },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self';",
    "manifest_version": 2
  }